pipeline {
    agent {
        docker {
            image 'python:3.12'
        }
    }
    environment {
        DOCKER_IMAGE = 'login-jose'
        DOCKER_TAG = 'latest'
        DOCKER_REGISTRY = ''  // Si no usas un registry externo, déjalo vacío
        PYTHON_VERSION = '3.12-slim'
    }
    stages {

        stage('Clonar Repositorio') {
            steps {
                script {
                sh '''
                 rm -rf .git  # Elimina cualquier rastro de un repo git previo
                git init  # Inicializa un repositorio vacío en el workspace
                git remote add origin https://github.com/LuyoJose/Login.git
                git fetch origin
                git reset --hard origin/master
                '''
            }
        }
    }


        stage('Preparar entornos') {
            steps {
                sh '''
                 apt update && apt install -y python3-venv
                '''
            }
        }

        stage('Instalar dependencias') {
            steps {
                sh '''
                python3 -m venv venv
                ./venv/bin/pip install --upgrade pip
                ./venv/bin/pip install -r requirements.txt
                '''
            }
        }
        stage('Ejecutar pruebas') {
            steps {
                script {
                    sh '''
                    ./venv/bin/pytest --junitxml=reports/test-results.xml
                    '''
                }
            }
            post {
                always {
                    junit 'reports/test-results.xml'
                }
            }
        }
        stage('Construir imagen Docker') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                }
            }
        }
        stage('Desplegar Contenedor') {
            steps {
                script {
                    sh '''
                    docker stop ${DOCKER_IMAGE} || true
                    docker rm ${DOCKER_IMAGE} || true
                    docker run -d --name ${DOCKER_IMAGE} -p 8000:8000 ${DOCKER_IMAGE}:${DOCKER_TAG}
                    '''
                }
            }
        }
    }

    post
